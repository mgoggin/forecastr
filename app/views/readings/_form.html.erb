<%= turbo_frame_tag :weather_lookup do %>
  <% if local_assigns[:error].present? %>
    <%= render "alert", error_message: local_assigns[:error] %>
  <% end %>
  <%= form_with(url: readings_path, scope: :reading) do |form| %>
    <div class="rounded-md px-3 pb-1.5 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
      <%= form.label :address, class: "block text-xs font-medium text-gray-900" %>
      <%= form.text_field :address, class: "block w-full border-0 p-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6", placeholder: "Enter your address here to lookup the weather forecast", autocomplete: "none" %>
    </div>
  <% end %>
<% end %>